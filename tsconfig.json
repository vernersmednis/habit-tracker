{
  "compilerOptions": {
    "target": "ESNext",               // modern JS output
    "module": "ESNext",               // keep ES modules
    "jsx": "react-jsx",               // enables JSX with React 17+
    "moduleResolution": "Node",       // how modules are resolved
    "strict": true,                   // enable all strict checks
    "esModuleInterop": true,          // smooth import/export
    "forceConsistentCasingInFileNames": true, // avoid casing issues
    "skipLibCheck": true              // faster builds, skip type checks in node_modules
  },
  "include": ["src"],                 // only look inside src/
  "exclude": ["node_modules"]         // ignore dependencies
}
